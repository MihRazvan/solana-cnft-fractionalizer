{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "../target/types/*": [
                "./target/types/*"
            ]
        }
    },
    "include": [
        "tests/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}